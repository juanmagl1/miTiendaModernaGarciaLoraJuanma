<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/tiendaAcosta?useSSL=false</property>
  <property name="hibernate.connection.username">acosta</property>
  <property name="hibernate.connection.password">felipe</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.format_sql">true</property>
  <mapping class="com.jacaranda.Clases.Elemento"/>
  <mapping class="com.jacaranda.Clases.Categoria"/>
  <mapping class="com.jacaranda.Clases.Usuario"/>
  <!-- <mapping class="com.jacaranda.Clases.Compra"/> -->
 </session-factory>
</hibernate-configuration>
